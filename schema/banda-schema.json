{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "data": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "nome",
          "descricao",
          "anoFundacao",
          "formacaoAtual",
          "local",
          "generos",
          "ultimaAtualizacao"
        ],
        "properties": {
          "nome": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100,
            "description": "Nome da banda"
          },
          "descricao": {
            "type": "string",
            "maxLength": 1500,
            "description": "Descrição da banda, história, estilo"
          },
          "anoFundacao": {
            "type": "integer",
            "description": "Ano de fundação da banda"
          },
          "anoTermino": {
            "type": ["integer", "null"],
            "description": "Ano de término da banda (null se ainda ativa)"
          },
          "avatar": {
            "type": "string",
            "description": "Avatar da banda (URL ou iniciais)"
          },
          "formacaoAtual": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["nome", "funcao"],
              "properties": {
                "nome": {
                  "type": "string",
                  "minLength": 1,
                  "maxLength": 50
                },
                "funcao": {
                  "type": "string",
                  "minLength": 1,
                  "maxLength": 50
                }
              }
            }
          },
          "funcoes": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 2,
              "maxLength": 30
            },
            "uniqueItems": true
          },
          "social": {
            "type": "object",
            "properties": {
              "instagram": {
                "type": "string",
                "pattern": "^https://(www\\.)?instagram\\.com/.+"
              },
              "youtube": {
                "type": "string",
                "pattern": "^https://(www\\.)?youtube\\.com/.+"
              },
              "spotify": {
                "type": "string",
                "pattern": "^https://open\\.spotify\\.com/.+"
              },
              "site": {
                "type": "string",
                "format": "uri"
              },
              "facebook": {
                "type": "string",
                "pattern": "^https://(www\\.)?facebook\\.com/.+"
              },
              "soundcloud": {
                "type": "string",
                "pattern": "^https://soundcloud\\.com/.+"
              }
            }
          },
          "contato": {
            "type": "object",
            "properties": {
              "email": {
                "type": "string",
                "format": "email"
              },
              "fone": {
                "type": "string"
              }
            }
          },
          "local": {
            "type": "object",
            "required": ["pais", "estado"],
            "properties": {
              "pais": {
                "type": "string",
                "enum": ["Brasil"],
                "description": "Por enquanto apenas Brasil"
              },
              "estado": {
                "type": "string",
                "enum": [
                  "AC",
                  "AL",
                  "AP",
                  "AM",
                  "BA",
                  "CE",
                  "DF",
                  "ES",
                  "GO",
                  "MA",
                  "MT",
                  "MS",
                  "MG",
                  "PA",
                  "PB",
                  "PR",
                  "PE",
                  "PI",
                  "RJ",
                  "RN",
                  "RS",
                  "RO",
                  "RR",
                  "SC",
                  "SP",
                  "SE",
                  "TO"
                ]
              },
              "cidade": {
                "type": "string",
                "minLength": 1,
                "maxLength": 50
              }
            }
          },
          "generos": {
            "type": "array",
            "minItems": 1,
            "maxItems": 5,
            "items": {
              "type": "string",
              "minLength": 2,
              "maxLength": 30
            },
            "uniqueItems": true
          },
          "isSolo": {
            "type": "boolean",
            "default": false,
            "description": "Indica se é um artista solo (true) ou uma banda (false)"
          },
          "complemento": {
            "type": "string",
            "description": "Path para arquivo complementar com mais detalhes"
          },
          "cadastradoEm": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp ISO 8601 do cadastro"
          },
          "emailCadastro": {
            "type": "string",
            "format": "email"
          },
          "ultimaAtualizacao": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp ISO 8601 da última atualização"
          },
          "fontes": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Fontes de informação"
          }
        }
      }
    }
  },
  "required": ["data"]
}
